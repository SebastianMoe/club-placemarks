{{> menu active="dashboard"}}

<section class="section">
  <div class="container">
    <h1 class="title">
      <span class="icon">
        <i class="fas fa-users"></i>
      </span>
      {{club.name}}
    </h1>
    
    {{#if club.description}}
      <div class="content">
        <p>{{club.description}}</p>
      </div>
    {{/if}}
    
    <div class="box">
      <h2 class="subtitle">Location</h2>
      {{#if club.latitude}}
        <p><strong>Latitude:</strong> {{club.latitude}}</p>
      {{/if}}
      {{#if club.longitude}}
        <p><strong>Longitude:</strong> {{club.longitude}}</p>
      {{/if}}
    </div>
    
    <div class="buttons">
      <a href="/club/{{club._id}}/edit" class="button is-primary">
        <span class="icon">
          <i class="fas fa-edit"></i>
        </span>
        <span>Edit</span>
      </a>
      <a href="/dashboard" class="button">
        <span class="icon">
          <i class="fas fa-arrow-left"></i>
        </span>
        <span>Back to Dashboard</span>
      </a>
    </div>
  </div>
</section>
