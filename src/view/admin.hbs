{{> menu}}

<section class="section">
  <h1 class="title">Admin Dashboard</h1>
  
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Scope</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{email}}</td>
          <td>{{scope}}</td>
          <td>
            <a href="/admin/deleteuser/{{_id}}" class="button is-danger is-small">Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>
